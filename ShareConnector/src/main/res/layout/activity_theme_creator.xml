<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeCreatorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Theme Creator" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Theme Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutThemeName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Theme Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextThemeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Theme Mode Toggle -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupThemeMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:checkedButton="@id/buttonLightMode"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLightMode"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light Mode" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDarkMode"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark Mode" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Color Picker Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary Colors"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Primary Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Primary Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#FF6B35" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- On Primary Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutOnPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="On Primary Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextOnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Secondary Colors -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Colors"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Secondary Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSecondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Secondary Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#FF8A65" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- On Secondary Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutOnSecondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="On Secondary Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextOnSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Background Colors -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Background Colors"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Background Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutBackground"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Background Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#FFFBFE" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- On Background Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutOnBackground"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="On Background Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextOnBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#1C1B1F" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Surface Colors -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surface Colors"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Surface Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSurface"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Surface Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSurface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#FFFBFE" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- On Surface Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutOnSurface"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="On Surface Color (Hex)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextOnSurface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="#1C1B1F" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Save Theme"
                    app:icon="@android:drawable/ic_menu_save" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDelete"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Delete"
                    android:visibility="gone"
                    app:icon="@android:drawable/ic_menu_delete" />

            </LinearLayout>

            <!-- Preview Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPreview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textPreviewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Theme Preview"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textPreviewSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="This is how your theme will look"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>