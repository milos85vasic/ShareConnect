<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spinner_text_margin_horizontal"
            android:layout_marginTop="@dimen/spinner_text_margin_vertical"
            android:layout_marginRight="@dimen/spinner_text_margin_horizontal"
            android:layout_marginBottom="@dimen/spinner_text_margin_vertical"
            android:textSize="@dimen/tr_abc_text_size_body_1_material"
            android:textColor="?android:textColorPrimary"/>
        <TextView android:id="@+id/torrent_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/spinner_text_margin_horizontal"
            android:textSize="@dimen/tr_abc_text_size_body_1_material"
            android:textColor="?android:textColorPrimary"/>
    </LinearLayout>

    <TextView android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_text_margin_horizontal"
        android:paddingTop="@dimen/spinner_text_margin_vertical"
        android:paddingRight="@dimen/spinner_text_margin_horizontal"
        android:paddingBottom="@dimen/spinner_text_margin_vertical"
        android:textSize="@dimen/abc_text_size_caption_material"
        android:textStyle="bold"
        android:textColor="?android:textColorSecondary"/>
    <include layout="@layout/separator"/>

</LinearLayout>
