<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.PortainerConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (Portainer blue) -->
        <item name="colorPrimary">#13BEF9</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorPrimaryContainer">#0099CC</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#2C3E50</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSecondaryContainer">#34495E</item>
        <item name="colorOnSecondaryContainer">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Window attributes -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Onboarding theme -->
    <style name="Theme.PortainerConnect.Onboarding" parent="Theme.PortainerConnect">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
